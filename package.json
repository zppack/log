  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zppack/log/issues"
  },
  "homepage": "https://github.com/zppack/log",
  "dependencies": {
    "chalk": "^4.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "rimraf": "^3.0.2",
    "standard-version": "^9.1.1"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  }
