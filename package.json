{
  "name": "@zppack/log",
  "version": "1.0.1",
  "description": "A log tool in console with 4 levels.",
  "keywords": [
    "log",
    "debug"
  ],
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "",
    "prebuild": "npm run clean",
    "build": "babel src -d dist",
    "clean": "rimraf dist",
